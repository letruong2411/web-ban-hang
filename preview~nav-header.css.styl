.header
  padding 40px 0 0 0
  background linear-gradient(#003e52,#1895b0)
  background-color #EEEEEE
  vertical-align middle
  border-radius 0 0 15px 15px
  position relative
  img
    text-align left

.search
  float right
  margin 30px 30px 0 0

.search-button
  padding 5px
  border 0
  background rgb(223, 141, 32)

.search-box
  padding 5px
  border 0

.nav
  background-color rgba(4,78,99,1.00)
  color white
  padding-bottom 10px
  padding-top 10px
  border-radius 0 0 15px 15px
  box-shadow 2px 2px 10px black
  li
    display inline-block
  .list-left
    float left
    margin 0
  .list-right
    float right
    margin 0
    margin-right 20px
  a
    color rgba(211,211,211,1.00)
    text-decoration none
    padding-top 10px
    padding-bottom 10px
    padding-left 5px
    padding-right 5px
    &:hover
      color white
      background-color #117C95
      border-radius 5px
      transition all 0.2s linear
  .a-light
    color white
  .dang-ky
    margin-left 0px
  .dang-nhap
    margin-right 0

.list-left
  li
    margin-right 10px

.list-right
  li
    margin-right 10px

.logo
  margin-left 40px
  margin-top 0px
  margin-bottom 10px
  border-radius 13px

.ten-cua-hang
  font-family 'Satisfy'
  position absolute
  font-size 30px
  font-weight bold
  color white
  margin-left 20px
  margin-top 30px
  text-shadow 3px 3px 5px black
